@model Sitecore.GnosisSocialNetworks.Areas.GnosisSocialNetworks.Models.Twitter.TwitterCardModel

@if (Model.ShowTitle)
{
    <meta name="twitter:title" content="@Html.Sitecore().Field("Twitter Card Title")" />
}
@if (Model.ShowDescription)
{
    <meta name="twitter:description" content="@Html.Sitecore().Field("Twitter Card Description")" />
}
@if (Model.ShowImageUrl)
{
    <meta name="twitter:image" content="@Model.ImageUrl" />
}